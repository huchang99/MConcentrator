<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_potocol188"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page2_bg2x"
    android:orientation="vertical"
    tools:context="com.system.mconcentrator.mconcentrator.Potocol188Activity">

    <include
        android:id="@+id/menu_titleup"
        layout="@layout/common_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/protocol130_first_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/inputbox_first_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/inputbox"
            android:orientation="vertical">

            <Button
                android:id="@+id/readConcentratorVesionBt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttontbox"
                android:text="读设备信息"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/buttontbox"
                    android:gravity="center"
                    android:text="集中器编号"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ConcentratorNumTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/textbox"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/buttontbox"
                    android:gravity="center"
                    android:text="集中器软件版本"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ConcentratorSwVersionTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/textbox"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/buttontbox"
                    android:gravity="center"
                    android:text="集中器硬件版本"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ConcentratorHWVersionTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/textbox"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/buttontbox"
                    android:gravity="center"
                    android:text="TCP/IP"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/readTcpIpTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/textbox"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttontbox"
                    android:gravity="center"
                    android:text="定时抄表时间"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/FisrttimeDayselect"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:checked="false" />

                            <TextView
                                android:id="@+id/FirsttimeDay"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="3"
                                android:background="@drawable/textbox"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="2" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="日" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <CheckBox
                                android:id="@+id/TwotimeDayselect"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:checked="false" />

                            <TextView
                                android:id="@+id/TwotimeDay"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="3"
                                android:background="@drawable/textbox"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="2" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="日" />

                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/timeHour"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@drawable/textbox"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="时" />

                    <TextView
                        android:id="@+id/timeMinute"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@drawable/textbox"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="分" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputbox_first_mid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/inputbox"
            android:orientation="vertical">

            <Button
                android:id="@+id/readfile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttontbox"
                android:gravity="center"
                android:text="读取档案"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />



            <Button
                android:id="@+id/copyMeterBt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttontbox"
                android:gravity="center"
                android:text="抄表"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />

            <Button
                android:id="@+id/selectMeterAddr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttontbox"
                android:gravity="center"
                android:text="选择表地址"
                android:textColor="@color/TextColor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/opengatebt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttontbox"
                    android:text="表开阀"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/offatebt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttontbox"
                    android:text="表关阀"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/gateStatetv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/textbox"
                android:textSize="20sp" />


        </LinearLayout>


    </LinearLayout>


    <include
        android:id="@+id/menu_titleend"
        layout="@layout/common_title_end"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/LocalDebug_content"
        android:layout_weight="1" />


</LinearLayout>
