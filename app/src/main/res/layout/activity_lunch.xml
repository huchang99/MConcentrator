<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lunch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page_bg2x"
    tools:context="com.system.mconcentrator.mconcentrator.LunchActivity">

    <TextView
        android:id="@+id/productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="JZ-W型集中器"
        android:textColor="@color/white"
        android:textSize="60sp" />
<RelativeLayout
    android:id="@+id/relativeLayoutbg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/icon_2loginbg2"
    android:layout_marginTop="120dp">

    <RelativeLayout
        android:id="@+id/login_user_name_layout"
        style="@style/common_editText_background"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/login_user_name_icon"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/mail_icon2x" />

        <EditText
            android:id="@+id/login_user_et"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:ems="10"
            android:hint="请输入用户名"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/editColor"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_user_pwd_layout"
        style="@style/common_editText_background"
        android:layout_below="@+id/login_user_name_layout"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/login_pwd_icon"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/password_icon2x"/>

        <EditText
            android:id="@+id/login_user_pwd_et"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/login_pwd_icon"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/editColor"
            android:textSize="14sp" />
    </RelativeLayout>

   <RelativeLayout
       android:id="@+id/cb_mima_layout"
       android:layout_width="285dp"
       android:layout_height="45dp"
       android:layout_below="@id/login_user_pwd_layout"
       android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true">
       <CheckBox
           android:id="@+id/cb_mima"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="12dip"
           android:text="记住密码"
           android:textColor="@color/white"
          />
   </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        style="@style/common_Button_background"
        android:layout_below="@id/cb_mima_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="登录"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>

</RelativeLayout>
